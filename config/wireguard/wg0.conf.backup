# WireGuard VPN Configuration Template
# ====================================
# PLACEHOLDER: Replace the placeholder values with your actual VPN provider details

[Interface]
# PLACEHOLDER: Replace with your private key from VPN provider
PrivateKey = PLACEHOLDER_PRIVATE_KEY_HERE
# PLACEHOLDER: Replace with the IP address assigned by your VPN provider
Address = 10.0.0.2/32
# DNS servers to use through the VPN tunnel
DNS = 1.1.1.1, 1.0.0.1

# iptables rules for traffic routing through VPN
PostUp = iptables -t nat -A POSTROUTING -o wg0 -j MASQUERADE
PostUp = iptables -A FORWARD -i %i -j ACCEPT
PostUp = iptables -A FORWARD -o %i -j ACCEPT
PostDown = iptables -t nat -D POSTROUTING -o wg0 -j MASQUERADE
PostDown = iptables -D FORWARD -i %i -j ACCEPT
PostDown = iptables -D FORWARD -o %i -j ACCEPT

[Peer]
# PLACEHOLDER: Replace with your VPN server's public key
PublicKey = PLACEHOLDER_SERVER_PUBLIC_KEY_HERE
# PLACEHOLDER: Replace with your VPN server's endpoint (IP:PORT)
Endpoint = PLACEHOLDER_VPN_SERVER_ENDPOINT:51820
# Route all traffic through the VPN
AllowedIPs = 0.0.0.0/0
# Keep the connection alive
PersistentKeepalive = 25

# Notes for configuration:
# 1. Obtain these values from your VPN provider
# 2. Some providers offer pre-configured files
# 3. Keep your private key secure and never share it
# 4. Test the connection before deploying the full stack